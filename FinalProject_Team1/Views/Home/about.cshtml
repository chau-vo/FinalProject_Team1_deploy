@{
    ViewData["Title"] = "About Us";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }
    
    .dashboard-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .team-card {
        background-color: white;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        height: 100%;
        margin-bottom: 2rem;
        position: relative;
    }
    
    .team-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
    }
    
    .team-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        padding: 1.5rem;
        color: white;
        text-align: center;
    }
    
    .team-header h3 {
        margin: 0;
        font-weight: 600;
    }
    
    .team-header p {
        margin: 0;
        opacity: 0.8;
    }
    
    .team-body {
        padding: 1.5rem;
        padding-top: 4rem;
    }
    
    .team-image-container {
        position: absolute;
        top: 4.5rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
    }
    
    .team-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .team-list {
        list-style-type: none;
        padding-left: 0;
        text-align: left;
        margin-top: 1rem;
    }
    
    .team-list li {
        padding: 0.5rem 0;
        position: relative;
        padding-left: 1.5rem;
        color: #555;
    }
    
    .team-list li:before {
        content: '\f00c';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        position: absolute;
        left: 0;
        top: 0.5rem;
        color: #6a11cb;
    }
    
    .model-card {
        background-color: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }
    
    .model-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        padding: 1.5rem;
        color: white;
    }
    
    .model-body {
        padding: 1.5rem;
    }
    
    .model-image {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .github-link {
        display: inline-block;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }
    
    .github-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        color: white;
    }
    
    .github-link i {
        margin-right: 0.5rem;
    }
</style>

<div class="container mt-4">
    <div class="dashboard-header">
        <h1 class="mb-2">About Our Team</h1>
        <p class="lead mb-0">Meet the people behind the Book Management System</p>
    </div>
    
    <!-- Data Model Section -->
    <div class="model-card">
        <div class="model-header">
            <h2 class="m-0">Our Logical Data Model</h2>
        </div>
        <div class="model-body text-center">
            <img src="~/images/ERD.png" class="model-image" alt="Logical Data Model" width="900" height="600">
            <div class="mt-4">
                <a href="https://github.com/camelliale1912/FinalProject_Team1/blob/48dc1da1f956576aea7a9ef6744878607e013be9/README.md" class="github-link">
                    <i class="fab fa-github"></i> View Our GitHub Repository
                </a>
            </div>
        </div>
    </div>
    
    <!-- Team Members Section -->
    <h2 class="mb-4">Meet Our Team</h2>
    
    <div class="row">
        <!-- Felix -->
        <div class="col-md-6 col-lg-3">
            <div class="team-card">
                <div class="team-header text-center">
                    <h3>Felix Schaefer</h3>
                    <p>MS AIBA Class of 2025</p>
                </div>
                <div class="team-body text-center">
                    <div class="team-image-container">
                        <img src="~/images/felix.png" class="team-image" alt="Felix Schaefer">
                    </div>
                    <ul class="team-list">
                        <li>Created Buttons for CRUD functions</li>
                        <li>Created documentation for the project</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Chau -->
        <div class="col-md-6 col-lg-3">
            <div class="team-card">
                <div class="team-header text-center">
                    <h3>Chau Vo</h3>
                    <p>MS AIBA Class of 2026</p>
                </div>
                <div class="team-body text-center">
                    <div class="team-image-container">
                        <img src="~/images/chauvo.jpg" class="team-image" alt="Chau Vo">
                    </div>
                    <ul class="team-list">
                        <li>Created About Us page</li>
                        <li>Updated CSS files and style of Explore page</li>
                        <li>Implemented MVC architecture for Home, Data Visual, and About Us page.</li>
                        <li>Hosted GitHub repository</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Tra Le -->
        <div class="col-md-6 col-lg-3">
            <div class="team-card">
                <div class="team-header text-center">
                    <h3>Tra Le</h3>
                    <p>MS AIBA Class of 2026</p>
                </div>
                <div class="team-body text-center">
                    <div class="team-image-container">
                        <img src="~/images/trale.JPG" class="team-image" alt="Tra Le">
                    </div>
                    <ul class="team-list">
                        <li>Created Home page and Data Visualization</li>
                        <li>Created the Logical Data Model diagram</li>
                        <li>Added Open library API</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Chris -->
        <div class="col-md-6 col-lg-3">
            <div class="team-card">
                <div class="team-header text-center">
                    <h3>Chris Brown</h3>
                    <p>Team Member</p>
                </div>
                <div class="team-body text-center">
                    <div class="team-image-container">
                        <img src="~/images/Chris.jpg" class="team-image" alt="Chris Brown">
                    </div>
                    <ul class="team-list">
                        <li>Created CRUD page and buttons</li>
                        <li>Adjusted code for CRUD operations</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
